<h1>Listing phones</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Mail</th>
    <th>Phone</th>
    <th>Returned</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @phones.each do |phone| %>
  <tr>
    <td><%= phone.name %></td>
    <td><%= phone.mail %></td>
    <td><%= phone.phone %></td>
    <td><%= phone.returned %></td>
    <td><%= phone.user %></td>
    <td><%= link_to 'Show', phone %></td>
    <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
    <td><%= link_to 'Destroy', phone, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

