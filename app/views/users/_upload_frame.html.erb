<strong>Or upload already recorded file</strong>
<div style="background: <%=@color%>">
	
<%= form_tag({:action => :upload_audio, :controller=> :upload}, :method => 'post', :multipart => true, :remote => true, :id=>"uploade_audio_form" ) do %>
	  <%= file_field_tag :data_file ,:required => true, :accept=>"*.", :name=>"AUDIO_FILE", :value=>"1048576"%>
	  <%= hidden_field_tag('user', value = @user.id)%>
	  <br />
	  <%= submit_tag 'Upload', :class=>"btn", :required => true, :temote=>true, :onclick=>"recorderReloade();"%>		
<% end %>
<%if @color == "red"%>
	<p class="label-warning">File can't be uploaded</p>
<%elsif @color == "green"%>
	<p class="label-info">Successfully uploaded</p>
<%end%>
</div>