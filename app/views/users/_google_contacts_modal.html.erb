
 
<!-- Modal -->
<div id="GoogleModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Import google contacts / Android phone contacts</h3>
  </div>
  <div class="modal-body">
    <form class="form-inline">
	  <input type="text" class="input-small" placeholder="Email">
	  <input type="password" class="input-small" placeholder="Password">
	  <button type="submit" class="btn btn-primary">Import</button>
	</form>  
	
	<%= form_tag('/google_contacts', :remote => true, :class=>'form-inline') do %>
	    <%= text_field_tag 'login'%>
	    <%= password_field_tag 'pass'%>
  		<%= submit_tag 'Save', :class=> 'btn btn-primary'%>
  		
	<% end %>
	  
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>    
  </div>
</div>