<!-- Modal -->
<div id="GoogleModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"></h3>
  </div>
  <img src="http://cdn1.iconfinder.com/data/icons/android-png/256/Android-Contacts.png" />
  <div class="modal-body">
  	<fieldset>
  		<legend>Android phone contacts</legend>
	<%= form_tag('/google_contacts') do%>	    
	    <label>Gmail</label>
	    <%= text_field_tag 'login'%> 
	    <label>Password</label>
	    <%= password_field_tag 'pass'%><p></p>
  		<%= submit_tag 'Import', :class=> 'btn btn-primary'%>  		
	<% end %>	
	</fieldset>
	  
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>    
  </div>
</div>