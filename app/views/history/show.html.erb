<%if @orders.count == 0%>
<strong>Your orders history is empty</strong>
<%else%>
	<table class="table">
	      <caption class="pull-left"></caption>
	      <thead>
	        <tr>
	          <th>Order count (<%=@orders.count%>)</th>          
	          <th>Event ID</th>
	          <th>Order date</th>
	          <th>Price</th>
	          <th>Details</th>
	        </tr>
	      </thead>
	      <tbody>
		<%@orders.each_with_index do |elem,index|%>
	        <tr>
	          <td><%=index+1%></td>
	          <td><%=elem.token%></td>
	          <td><%=elem.created_at%></td>
	          <td><%=elem.amount.to_f.round(2)%> nis</td>  
	          <td>          	
	          	<a href="#tbl_invitesHistory" class="btn btn-info" onclick="show_history_invites_by_token('<%=elem.token%>');">show details</a>
	      	  </td>          
	        </tr>
	    <%end%>
	      </tbody>
	</table>
	<div id="tbl_invitesHistory"></div>
	<script>
	//Close ditails button
		function foo(argument) {
				  
		  document.getElementById("tbl_invitesHistory").innerHTML="";
		}
	</script>
<%end%>
