 <div class="row-fluid" id="full_report_div" > 	
 	
 	<div class="control-list"> 	
 		<h6><div id="progress_bar_lable"></div></h6>
	 		<div class="progress progress-striped active">
			  <div class="bar bar-warning" style="width: 0%;" id="progress_bar"></div>
			</div>
	 	<div class="row-fluid">		 	
			<div class="span3">
	 	 		<!--Small report table on the right side-->
	 	 		<% if signed_in? %>	
					<%case current_user.category%>
			 		  <%when "Bar-mitzvah"%>
							<%=render 'report'%>
					  <%when "Wedding"%>
							<%=render 'report'%>
					  <%when "Other"%>
							<%=render 'report/reportAds'%>
					  <%when "Advertising"%>
							<%=render 'report/reportAds'%
					  <%when "Conference"%>
							<%=render 'report'%>
					 <%end%>				  	
			    	
	        	<% end %>	
	 	 		
	 	 	</div> 	
		 	<div class="span9">
			 	<table class="table table-bordered table-hover">
			  		<thead>
		                <tr>                  
		                  <th>שם</th>
		                  <th>דואר אלקטרוני</th>
		                  <th>מספר טלפון</th>
		                  <th>סטטוס הגעה</th>
		                </tr>
				  	</thead>
				  	<tbody id="full_report_table_body">
		                <%=render 'invites_each'%>                
			          </tbody>
			  	</table>	
		 	</div>	 	 	
	 	</div>
 	</div> 	
 </div> 
